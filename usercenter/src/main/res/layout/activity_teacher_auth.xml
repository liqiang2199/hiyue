<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white">

    <com.hiyue.provider.widget.NavCommonView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="@string/me_teacher_base_info">

    </com.hiyue.provider.widget.NavCommonView>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#f5f5f5"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="#f5f5f5"
                android:layout_marginTop="@dimen/dp_20"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="昵称："
                    android:paddingLeft="@dimen/dp_10"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/text_color_333333"/>

                <EditText
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:hint="请输入老师昵称"
                    android:textColorHint="@color/text_color_999999"
                    android:paddingLeft="@dimen/dp_10"
                    android:background="@null"
                    android:textSize="@dimen/sp_14"
                    android:gravity="center_vertical"
                    android:textColor="@color/text_color_333333"/>


            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="#f5f5f5"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="电话："
                    android:paddingLeft="@dimen/dp_10"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/text_color_333333"/>

                <EditText
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:hint="请输入老师电话"
                    android:textColorHint="@color/text_color_999999"
                    android:paddingLeft="@dimen/dp_10"
                    android:textSize="@dimen/sp_14"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:textColor="@color/text_color_333333"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="#f5f5f5"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingRight="@dimen/dp_15"
                android:paddingLeft="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_30">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:text="毕业证"
                    android:textSize="@dimen/sp_14"
                    android:gravity="center_vertical"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:src="@drawable/rate_cross_480"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:text="教师资格证"
                    android:gravity="center_vertical"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:textSize="@dimen/sp_14"
                    android:src="@drawable/rate_cross_480"/>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_30">

                    <include
                        layout="@layout/include_common_but"/>

                </FrameLayout>

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</LinearLayout>
